<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="miliooo_messaging.abstract_new_message_builder" class="Miliooo\Messaging\Builder\AbstractNewMessageBuilder" abstract="true">
            <call method="setMessageClass">
                <argument>%miliooo_messaging.message_class%</argument>
            </call>
            <call method="setMessageMetaClass">
                <argument>%miliooo_messaging.message_meta_class%</argument>
            </call>
            <call method="setThreadClass">
                <argument>%miliooo_messaging.thread_class%</argument>
            </call>
            <call method="setThreadMetaClass">
                <argument>%miliooo_messaging.thread_meta_class%</argument>
            </call>
        </service>

        <service id="miliooo_messaging.new_thread_builder" class="Miliooo\Messaging\Builder\Thread\NewThread\NewThreadBuilder" parent="miliooo_messaging.abstract_new_message_builder" />

        <service id="miliooo_messaging.new_thread_builder_form_model" class="Miliooo\Messaging\Builder\Thread\NewThread\NewThreadBuilderFromFormModel" parent="miliooo_messaging.abstract_new_message_builder" />

        <service id="miliooo_messaging.reply_builder" class="Miliooo\Messaging\Builder\Reply\ReplyBuilder" parent="miliooo_messaging.abstract_new_message_builder" />

    </services>

</container>
