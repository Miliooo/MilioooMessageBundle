<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="miliooo_messaging.abstract_new_message_builder" class="Miliooo\Messaging\Builder\AbstractNewMessageBuilder" abstract="true">
            <call method="setMessageClass">
                <argument>%fos_message.message_class%</argument>
            </call>
            <call method="setMessageMetaClass">
                <argument>%fos_message.message_meta_class%</argument>
            </call>
            <call method="setThreadClass">
                <argument>%fos_message.thread_class%</argument>
            </call>
            <call method="setThreadMetaClass">
                <argument>%fos_message.thread_meta_class%</argument>
            </call>
        </service>
    </services>
</container>