<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Miliooo\Messaging\Form\FormModel\NewThreadSingleRecipient">
        <property name="recipient">
            <constraint name="All">
                <constraint name="Miliooo\MessagingBundle\Validator\Constraint\SelfRecipient"/>
                <constraint name="NotBlank">
                    <option name="message">No recipient specified</option>
                </constraint>
                <constraint name="Type">
                    <option name="type">Miliooo\Messaging\User\ParticipantInterface</option>
                    <option name="message">validate.recipient_invalid_type</option>
                </constraint>
            </constraint>
        </property>
        <property name="subject">
            <constraint name="NotBlank">
                <option name="message">Please enter a subject</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">The subject is too short|The subject is too short</option>
                <option name="maxMessage">The subject is too long|The subject is too long</option>
            </constraint>
        </property>

        <property name="body">
            <constraint name="NotBlank">
                <option name="message">Please enter a body</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">The body is too short</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
