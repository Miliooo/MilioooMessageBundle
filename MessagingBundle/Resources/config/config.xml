<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="miliooo_messaging.thread_provider" class="Miliooo\Messaging\ThreadProvider\ThreadProvider">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%miliooo_messaging.thread_class%</argument>
        </service>

        <service id="miliooo_messaging.specification_aware_thread_provider" class="Miliooo\Messaging\ThreadProvider\SpecificationAwareThreadProvider">
            <argument type="service" id="miliooo_messaging.thread_provider" />
            <argument type="service" id="milioo_messaging.specification.can_see_thread" />
        </service>

    </services>

</container>
